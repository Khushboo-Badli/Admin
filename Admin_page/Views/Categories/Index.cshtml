@model IEnumerable<Admin_page.Models.MM_Categories>

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>*@
    <td>
        <div class="btn-group-justified" role="group" style="width:auto">

            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-xs btn-info" }) 
            @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @class = " btn btn-xs btn-warning " }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @class = " btn btn-xs btn-danger " })
            
        </div>
    </td>
    </tr>
}

</table>
